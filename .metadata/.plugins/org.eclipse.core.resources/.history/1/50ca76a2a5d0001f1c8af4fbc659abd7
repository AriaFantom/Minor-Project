             <%
             java.text.SimpleDateFormat sdf = new java.text.SimpleDateFormat("dd-MM-yyyy");
                try {
                    Class.forName("com.mysql.cj.jdbc.Driver");
                    String url="jdbc:mysql://localhost:3306/minorproject";
                    String uid="root";
                    String upass="1234";
                    conn=DriverManager.getConnection(url,uid,upass);
                    pstm = conn.prepareStatement("SELECT "+ 
                    	    "s.name AS `session`, " +
                    	    "a.id AS `appointmentid`, " +
                    	    		"a.date AS `app_date`, " +
                    	    "p.username AS `patient`, " +
                    	    "s.week AS `week`, " +
                    	    "s.start_time AS `start`, " +
                    	    "s.end_time AS `end` " +
                    	"FROM " +
                    	    "appointments a " +
                    	"INNER JOIN " +
                    	    "doctors d ON a.doctor_id = d.id " +
                    	"INNER JOIN " +
                    	    "patients p ON a.patient_id = p.id " +
                    	"INNER JOIN " +
                    	    "schedule s ON a.schedule = s.id " +
                    	"WHERE " +
                    	    "d.email = ? and status='booked'" +
                    	"ORDER BY " +
                    	    "s.week ASC, " +
                    	    "s.start_time ASC; ");
                    
                    pstm.setString(1, doctorEmail);
                    rs = pstm.executeQuery();
                    
                    while (rs.next()) {
                    	String name = rs.getString("session");
                    	int appointment_id = rs.getInt("appointmentid");
                    	String patient = rs.getString("patient");
                    	int week = rs.getInt("week");
                        String[] days = {"Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"};
                        String dayName = (week >= 1 && week <= 7) ? days[week - 1] : "Unknown Day";
                        String startTime = rs.getString("start");
                        String endTime = rs.getString("end");
                        String formattedStartTime = startTime.substring(0, 5);
                        String formattedEndTime = endTime.substring(0, 5);
                        Timestamp app_date = rs.getTimestamp("app_date");
                   	 	String formattedDate = sdf.format(app_date);
              %>
            <tr>
                <td><%= name %></td>
